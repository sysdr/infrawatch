# Copy to .env and set values. Do not commit .env (contains secrets).
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/log_retention
REDIS_URL=redis://localhost:6379/0
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_HOT=logs-hot
MINIO_BUCKET_WARM=logs-warm
MINIO_BUCKET_COLD=logs-cold
HOT_RETENTION_DAYS=7
WARM_RETENTION_DAYS=90
COLD_RETENTION_DAYS=2555
COMPRESSION_ALGORITHM=gzip
BATCH_SIZE=10000
ARCHIVAL_WORKERS=4
